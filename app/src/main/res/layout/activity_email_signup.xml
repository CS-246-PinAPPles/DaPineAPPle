<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pineapple.dapineapple.LoginActivity"
    >

    <EditText
        android:id="@+id/emailInput"
        android:elevation="1dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="50dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:background="@drawable/roundtop_edittext" />

    <EditText
        android:id="@+id/passwordInput"
        android:elevation="1dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="50dp"
        android:paddingEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/square_edittext"
        android:layout_below="@+id/emailInput"
        android:layout_alignStart="@+id/emailInput"
        android:layout_alignEnd="@+id/emailInput" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_below="@+id/confirmPassword"
        android:layout_marginTop="55dp"
        android:layout_alignLeft="@+id/confirmPassword"
        android:layout_alignStart="@+id/confirmPassword"
        android:layout_alignRight="@+id/confirmPassword"
        android:backgroundTint="#f4ae3c"
        android:textColor="#FFFFFF"
        android:layout_alignEnd="@+id/confirmPassword" />

    <Button
        android:id="@+id/returnSignInButton"
        android:elevation="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to Sign In"
        android:textColor="#177308"
        android:layout_below="@+id/signUpButton"
        android:layout_marginTop="55dp"
        android:layout_alignLeft="@+id/signUpButton"
        android:layout_alignStart="@+id/signUpButton"
        android:layout_alignRight="@+id/signUpButton"
        android:layout_alignEnd="@+id/signUpButton" />

    <EditText
        android:id="@+id/confirmPassword"
        android:elevation="1dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="50dp"
        android:paddingEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:background="@drawable/roundbottom_edittext"
        android:layout_below="@+id/passwordInput"
        android:layout_alignStart="@+id/passwordInput"
        android:layout_alignEnd="@+id/passwordInput" />

    <ImageView
        android:id="@+id/pineappleBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:elevation="0dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/pineapple_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/mailIcon"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mail_icon"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/emailInput"
        android:layout_alignStart="@+id/emailInput" />

    <ImageView
        android:id="@+id/lockIcon"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mailIcon"
        android:layout_below="@+id/emailInput"
        app:srcCompat="@drawable/lock_icon" />

    <ImageView
        android:id="@+id/lockIcon2"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lockIcon"
        android:layout_below="@+id/passwordInput"
        app:srcCompat="@drawable/lock_icon2" />

</android.widget.RelativeLayout>
